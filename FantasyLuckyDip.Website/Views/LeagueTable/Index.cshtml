@using FantasyLuckyDip.DataTransferObjects
@model FantasyLuckyDip.Website.Models.ILeagueTableModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "League Table";
}

@{
    switch (this.Model.Type)
    {
        case EventType.WorldChampionships:
            Html.RenderPartial("WorldChampionships", this.Model);
            break;
        case EventType.Gotzis:
            Html.RenderPartial("Gotzis", this.Model);
            break;
    }
}

@section Scripts {
    <script type="text/javascript" src="~/Scripts/league-table.js"></script>
}